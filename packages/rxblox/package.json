{
  "name": "rxblox",
  "version": "1.22.0",
  "description": "A reactive state management library",
  "type": "module",
  "main": "./dist/rxblox.umd.js",
  "module": "./dist/rxblox.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/rxblox.js",
      "require": "./dist/rxblox.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest --no-watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --no-watch",
    "dry": "npm pack --dry-run",
    "preversion": "npm test && npm run build && (git diff --quiet && git diff --staged --quiet || (git add -A && git commit -m \"chore: prepare for release\"))",
    "version:patch": "npm version patch -m \"chore: bump version to %s\"",
    "version:minor": "npm version minor -m \"chore: bump version to %s\"",
    "version:major": "npm version major -m \"chore: bump version to %s\"",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run build",
    "postpublish": "git diff --quiet || (git add -A && git commit -m \"chore: post-publish updates\" && git push)",
    "pub:patch": "npm run version:patch && npm publish",
    "pub:minor": "npm run version:minor && npm publish",
    "pub:major": "npm run version:major && npm publish"
  },
  "keywords": [
    "state",
    "management",
    "reactive",
    "react"
  ],
  "author": "linq2js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linq2js/rxblox.git"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "immer": "^10.2.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.45",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "jsdom": "^23.0.1",
    "react": "^18.2.0",
    "terser": "^5.36.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^1.1.0"
  }
}
